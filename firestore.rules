rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザープロファイルのルール
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.auth.uid == userId;
      allow update: if request.auth != null 
        && request.auth.uid == userId
        // 更新可能なフィールドを制限
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['username', 'lastUpdate'])
        // タイムスタンプが正しい形式かチェック
        && request.resource.data.lastUpdate is timestamp
        // タイムスタンプが現在時刻に近いかチェック（5分以内）
        && request.time.toMillis() - request.resource.data.lastUpdate.toMillis() < 300000;
      allow delete: if false;  // ユーザープロファイルの削除は禁止
    }

    // 投稿のルール
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // 投稿者本人による更新、または投票によるoptionsフィールドの更新を許可
      allow update: if request.auth != null && (
        // 投稿者本人による更新
        request.auth.uid == resource.data.userId ||
        // 投票による options フィールドのみの更新を許可
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['options']))
      );
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // 投票のルール
    match /votes/{voteId} {
      allow read: if request.auth != null;
      // 投票を作成する際、userIdが自分自身であることを確認
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if false;  // 投票の更新は禁止
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // 通報のルール
    match /reports/{reportId} {
      // 自分が通報したものだけ読める
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.reportedBy;
      // 誰でも通報を作成できる
      allow create: if request.auth != null
        && request.resource.data.reportedBy == request.auth.uid;
      // 通報の更新・削除は禁止（管理者のみFirebaseコンソールから操作）
      allow update: if false;
      allow delete: if false;
    }

    // ブロックリストのルール
    match /users/{userId}/blockedUsers/{blockedUserId} {
      // 自分のブロックリストのみ読み書き可能
      allow read: if request.auth != null 
        && request.auth.uid == userId;
      allow create: if request.auth != null 
        && request.auth.uid == userId;
      allow delete: if request.auth != null 
        && request.auth.uid == userId;
      // ブロックリストの更新は禁止（作成と削除のみ）
      allow update: if false;
    }
  }
}